{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "error",
    "no-console": "warn",
    "prefer-const": "error"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "*.config.js"
  ],
  "globals": {
    "React": "readonly",
    "describe": "readonly",
    "it": "readonly", 
    "expect": "readonly",
    "__dirname": "readonly"
  }
}
