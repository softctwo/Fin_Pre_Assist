{
  "dashboard": {
    "title": "Fin Pre Assist - Observability",
    "timezone": "browser",
    "panels": [
      {
        "type": "timeseries",
        "title": "API 延迟 (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95"
          }
        ],
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "timeseries",
        "title": "HTTP 状态码",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code!=\"200\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}}"
          }
        ],
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "timeseries",
        "title": "数据库连接数",
        "targets": [
          {
            "expr": "active_connections",
            "legendFormat": "active"
          }
        ],
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
      },
      {
        "type": "timeseries",
        "title": "Redis 命中率",
        "targets": [
          {
            "expr": "cache_hit_rate{cache_type=\"redis\"}",
            "legendFormat": "{{cache_type}}"
          }
        ],
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
      },
      {
        "type": "timeseries",
        "title": "AI Token 消耗",
        "targets": [
          {
            "expr": "sum(increase(ai_tokens_used_total[5m])) by (provider)",
            "legendFormat": "{{provider}}"
          }
        ],
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
      },
      {
        "type": "timeseries",
        "title": "向量搜索次数",
        "targets": [
          {
            "expr": "sum(rate(vector_search_total[5m])) by (collection)",
            "legendFormat": "{{collection}}"
          }
        ],
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 }
      }
    ],
    "schemaVersion": 38,
    "version": 1
  }
}
