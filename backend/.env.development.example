# =============================================================================
# 开发环境配置模板
# =============================================================================
# 使用: cp .env.development.example .env.development

ENVIRONMENT=development

# Application
APP_NAME=金融售前方案辅助系统-开发
DEBUG=True
LOG_LEVEL=DEBUG

# Server
HOST=0.0.0.0
PORT=8000

# Database (本地开发库)
DATABASE_URL=postgresql://root:root@localhost:5432/fin_pre_assist_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS (允许所有本地端口)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# JWT (开发环境用简单密钥)
SECRET_KEY=dev_secret_key_for_development_only_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8小时，方便开发

# AI (使用智谱GLM-4)
ZHIPU_API_KEY=your-dev-zhipu-api-key
AI_PROVIDER=zhipu

# Performance
ENABLE_METRICS=True  # 开发环境启用metrics端点

# File Storage
UPLOAD_DIR=./storage/documents
EXPORT_DIR=./storage/exports
MAX_UPLOAD_SIZE=52428800

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./storage/chroma
